{
    "name": "genie",
    "version": "0.0.1",
    "description": "Genie Modular Game Engine",
    "license": "UNLICENSED",
    "private": true,
    "author": "BBC",
    "repository": {
        "type": "git",
        "url": "https://github.com/bbc/childrens-games-genie"
    },
    "dependencies": {
        "babel-polyfill": "^6.26.0",
        "expose-loader": "^0.7.5",
        "lodash": "^4.17.4",
        "npm": "^5.7.1",
        "phaser-ce": "~2.10"
    },
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.6.1",
        "chai": "^4.1.2",
        "eslint": "^4.18.2",
        "eslint-config-prettier": "^2.9.0",
        "eslint-config-standard": "^11.0.0",
        "eslint-plugin-import": "^2.9.0",
        "eslint-plugin-no-only-tests": "^2.0.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-prettier": "^2.6.0",
        "eslint-plugin-promise": "^3.7.0",
        "eslint-plugin-standard": "^3.0.1",
        "istanbul-instrumenter-loader": "^3.0.0",
        "jsdoc": "^3.5.5",
        "karma": "^2.0.0",
        "karma-chai": "^0.1.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage": "^1.1.1",
        "karma-mocha": "^1.3.0",
        "karma-mocha-reporter": "^2.2.5",
        "karma-remap-coverage": "^0.1.5",
        "karma-sinon": "^1.0.5",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-webpack": "^2.0.9",
        "live-server": "^1.2.0",
        "mocha": "^4.1.0",
        "prettier": "^1.11.1",
        "requirejs": "^2.3.5",
        "sinon": "^4.1.5",
        "webpack": "^3.11.0"
    },
    "scripts": {
        "start": "live-server --no-browser --entry-file=./index.dev.html --watch=./src",
        "start:qa": "npm run build && live-server --no-browser --entry-file=./index.qa.html --watch=./output/main.js -V",
        "build": "webpack --config build-scripts/webpack.config.js",
        "build-watch": "webpack --config build-scripts/webpack.config.js --watch",
        "eslint": "eslint . --ignore-pattern lodash",
        "test": "karma start test/karma.conf.js && npm run eslint",
        "test:coverage": "NODE_OPTIONS=--max_old_space_size=4096 karma start test/karma.conf.js --coverage && npm run eslint",
        "test-watch": "karma start test/karma.conf.js --no-single-run --auto-watch",
        "test-watch:coverage": "NODE_OPTIONS=--max_old_space_size=4096 karma start test/karma.conf.js --no-single-run --auto-watch --coverage",
        "docs": "open ./docs/api/index.html",
        "gendocs": "./node_modules/.bin/jsdoc -c ./build-scripts/docs/.jsdoc.js"
    }
}
