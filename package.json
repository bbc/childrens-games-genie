{
    "name": "genie",
    "version": "1.0.7",
    "description": "Genie - A Modular Game Engine",
    "license": "Apache-2.0",
    "private": true,
    "author": "BBC",
    "repository": {
        "type": "git",
        "url": "https://github.com/bbc/childrens-games-genie"
    },
    "dependencies": {
        "expose-loader": "^0.7.5",
        "phaser-ce": "2.12.0",
        "webfontloader": "^1.6.28",
        "babel-core": "^6.26.3",
        "babel-jest": "23.6.0",
        "babel-loader": "^7.1.5",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1"
    },
    "devDependencies": {
        "cross-env": "^5.2.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-config-standard": "^11.0.0",
        "eslint-plugin-import": "^2.9.0",
        "eslint-plugin-jest": "^22.5.1",
        "eslint-plugin-local-rules": "^0.1.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-prettier": "^2.6.0",
        "eslint-plugin-promise": "^3.7.0",
        "eslint-plugin-standard": "^3.0.1",
        "hard-source-webpack-plugin": "^0.6.4",
        "jest": "23.6.0",
        "jest-canvas-mock": "^2.0.0",
        "jest-webpack": "^0.5.1",
        "jsdoc": "^3.5.5",
        "jsdom": "^13.2.0",
        "live-server": "^1.2.1",
        "local-web-server": "^2.6.0",
        "prettier": "1.17.0",
        "webpack": "^4.16.5",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.14",
        "webpack-visualizer-plugin": "^0.1.11"
    },
    "scripts": {
        "clean": "rm -rf .cache",
        "start": "ws --config-file dev/scripts/web-config.js",
        "watch": "live-server --no-browser --entry-file=dev/index.dev.html --watch=./src --middleware=$PWD/dev/scripts/rewrite.js",
        "start:qa": "webpack-dev-server --config build-scripts/webpack.config.js --env.genieCore",
        "build": "webpack --config build-scripts/webpack.config.js --env.genieCore",
        "build-watch": "webpack --config build-scripts/webpack.config.js --watch --env.genieCore",
        "eslint": "eslint . --ignore-pattern lib/ --ignore-path .gitignore",
        "jest": "jest --coverage --runInBand",
        "jest:no-coverage": "jest --runInBand",
        "test": "npm run jest && npm run eslint",
        "docs": "open ./docs/api/index.html",
        "gendocs": "jsdoc -c ./build-scripts/docs/.jsdoc.js"
    }
}
