{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended", "tslint-eslint-rules"],
    "jsRules": {},
    "rules": {
        "ban": [
            true,
            {"name": ["it", "only"], "message": "Test has 'it.only' restriction"},
            {"name": ["describe", "only"], "message": "Test has 'describe.only' restriction"},
            {"name": ["it", "skip"], "message": "Test has been skipped"},
            {"name": ["describe", "skip"], "message": "Describe block has been skipped"}
        ],
        "no-trailing-whitespace": false,
        "object-literal-sort-keys": false,
        "member-access": false,
        "one-line": false,
        "brace-style": false,
        "arrow-parens": false,
        "interface-name": false,
        "variable-name": [true, "allow-leading-underscore"],
        "max-line-length": false,
        "no-consecutive-blank-lines": false,
        "no-console": false,
        "comment-format": false,
        "no-empty": false,
        "no-reference": false,
        "semicolon": {"options": [ "always", "ignore-bound-class-methods" ]}
    },
    "rulesDirectory": []
}
